<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_form_singleton_clocking" model="ir.ui.view">
      <field name="name">Add Singleton Clocking Wizard</field>
      <field name="model">hr.singletonclocking.wizard</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="employee_id"/>
              <field name="source"/>
            </group>
            <group>
              <field name="clocking_to_add_or_delete" />
            </group>
          </sheet>
          <footer>
            <button type="object"
              name="button_add_clocking"
              string="Add Clocking"
              class='btn-primary'
            />
            <button special="cancel"
              string="Cancel"
              class="btn-default" />
          </footer>
        </form>
      </field>
    </record>

    <act_window id="action_singleton_clocking"
      name="Singleton Clocking"
      res_model="hr.singletonclocking.wizard"
      view_mode="form"
      target="new"
      />

    <menuitem
      parent="menu_hr_root"
      id="menu_wizard_singleton_clocking"
      groups="group_hr_user"
      action="action_singleton_clocking"
    />

</odoo>
